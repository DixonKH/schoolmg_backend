generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id        String   @id @default(uuid())
  userId    String   @unique
  role      Role
  fullName  String
  phone     String?
  avatarUrl String?
  createdAt DateTime @default(now())

  student Student?
  teacher Teacher?
  parent  Parent?
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
  PARENT
}

model Class {
  id       String  @id @default(uuid())
  name     String
  grade    Int
  createdAt DateTime @default(now())

  students Student[]
  teachers Teacher[]
  lessons  Lesson[]
}

model Student {
  id          String    @id @default(uuid())
  profiledId  String    @unique
  classId     String
  parentId    String?
  birthDate   DateTime?
  parentPhone String?
  grades      Grade[]

  profile Profile @relation(fields: [profiledId], references: [id])
  class   Class   @relation(fields: [classId], references: [id])
  parent  Parent? @relation(fields: [parentId], references: [id])
  createdAt DateTime @default(now())
}

model Parent {
  id        String   @id @default(uuid())
  profileId String   @unique
  createdAt DateTime @default(now())

  profile  Profile @relation(fields: [profileId], references: [id])
  children Student[]
}

model Teacher {
  id             String   @id @default(uuid())
  profiledId     String   @unique
  specialization String
  createdAt      DateTime @default(now())

  profile Profile  @relation(fields: [profiledId], references: [id])
  classes Class[]
  lessons Lesson[]
  grades  Grade[]
}

model Subject {
  id   String @id @default(uuid())
  name String

  lessons Lesson[]
  grades  Grade[]
}

model Lesson {
  id        String @id @default(uuid())
  classId   String
  teacherId String
  subjectId String
  weekday   Int
  startTime DateTime
  endTime   DateTime

  class   Class   @relation(fields: [classId], references: [id])
  teacher Teacher @relation(fields: [teacherId], references: [id])
  subject Subject @relation(fields: [subjectId], references: [id])
}

model Grade {
  id        String   @id @default(uuid())
  studentId String
  subjectId String
  teacherId String
  value     Int
  comment   String?
  createdAt DateTime @default(now())

  student Student @relation(fields: [studentId], references: [id])
  subject Subject @relation(fields: [subjectId], references: [id])
  teacher Teacher @relation(fields: [teacherId], references: [id])
}

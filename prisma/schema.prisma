generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  TEACHER
  ACCOUNTANT
  STUDENT
}

enum LeadStatus {
  NEW
  CONTACTED
  TRIAL
  REGISTERED
  LOST
}

enum StudentStatus {
  ACTIVE
  SUSPENDED
  GRADUATED
  LEFT
}

enum GradeType {
  DAILY
  MIDTERM
  FINAL
}

enum PaymentStatus {
  PENDING
  PAID
  CANCELLED
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
}


model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String   @unique
  password  String
  role      UserRole
  isDeleted Boolean @default(false)
  createdAt DateTime @default(now())

  teacher   Teacher?
  student   Student?
  staff     Staff?
}

////////////////////
/// STAFF (Admin, Sales, Accountant)
////////////////////

model Staff {
  id        String   @id @default(uuid())
  fullName  String
  phone     String?
  position  String?
  avatar         String?
  address        String?
  
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])

  leads     Lead[]
}

////////////////////
/// LEAD (CRM CORE)
////////////////////

model Lead {
  id           String     @id @default(uuid())
  fullName     String
  phone        String
  source       String?
  status       LeadStatus @default(NEW)
  notes        String?

  assignedToId String?
  assignedTo   Staff?     @relation(fields: [assignedToId], references: [id])

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Student {
  id             String        @id @default(uuid())
  fullName       String
  birthDate      String
  status         StudentStatus @default(ACTIVE)
  parentName     String?
  enrollmentDate DateTime      @default(now())

  phone          String?
  parentPhone    String?
  avatar         String?
  avatarPublicId String?
  address        String?

  userId         String? @unique
  user           User?         @relation(fields: [userId], references: [id])

  classId        String
  class          Class        @relation(fields: [classId], references: [id])

  payments       Payment[]
  attendances    Attendance[]
  grades         Grade[]
  journalEntries JournalEntry[]

  createdAt      DateTime @default(now())
}

model Teacher {
  id             String   @id @default(uuid())
  fullName       String
  status         StudentStatus @default(ACTIVE)
  phone          String?
  birthDate      String?
  avatar         String?
  avatarPublicId String?
  address        String?

  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])

  classes   Class[]
  subjects  Subject[]
  journals Journal[]
}

model Class {
  id        String   @id @default(uuid())
  name      String
  capacity  Int

  teacherId String?
  teacher   Teacher?  @relation(fields: [teacherId], references: [id])

  students  Student[]
  subjects  Subject[]
  schedule  Schedule[]
  attendance  Attendance[]
  journals Journal[]

  createdAt DateTime @default(now())
}

model Subject {
  id        String   @id @default(uuid())
  name      String   

  classId   String?
  class     Class?    @relation(fields: [classId], references: [id])

  teacherId String
  teacher   Teacher  @relation(fields: [teacherId], references: [id], onDelete: Cascade)

  grades    Grade[]
  attendance  Attendance[]
  journals Journal[]

  @@unique([name, classId])
}

model Attendance {
  id        String   @id @default(uuid())
  date      DateTime
  present   Boolean

  studentId String
  student   Student  @relation(fields: [studentId], references: [id])

  classId   String?
  class     Class?   @relation(fields: [classId], references: [id])

  subjectId String?
  subject   Subject?   @relation(fields: [subjectId], references: [id])

  createdAt DateTime @default(now())

  @@unique([date, studentId, subjectId])
}

model Grade {
  id        String   @id @default(uuid())
  value     Float
  type      GradeType?
  date      DateTime?

  studentId String
  student   Student  @relation(fields: [studentId], references: [id])

  subjectId String
  subject   Subject  @relation(fields: [subjectId], references: [id])
}

model Journal {
  id        String @id @default(uuid())

  date      DateTime

  classId   String
  subjectId String
  teacherId String

  class     Class    @relation(fields: [classId], references: [id])
  subject   Subject  @relation(fields: [subjectId], references: [id])
  teacher   Teacher  @relation(fields: [teacherId], references: [id])

  entries   JournalEntry[]

  createdAt DateTime @default(now())

  @@unique([date, classId, subjectId])
}

model JournalEntry {
  id        String @id @default(uuid())

  journalId String
  studentId String

  date      DateTime

  present   Boolean?
  grade     Float?
  gradeType GradeType?

  journal   Journal   @relation(fields: [journalId], references: [id])
  student   Student   @relation(fields: [studentId], references: [id])

  createdAt DateTime @default(now())

  @@unique([journalId, studentId])
}


model Payment {
  id        String         @id @default(uuid())
  amount    Float
  status    PaymentStatus @default(PENDING)
  method    PaymentMethod
  paidAt    DateTime?

  studentId String
  student   Student        @relation(fields: [studentId], references: [id])

  createdAt DateTime @default(now())
}

model Schedule {
  id        String   @id @default(uuid())
  dayOfWeek Int      // 1 - Monday, 7 - Sunday
  startTime String
  endTime   String

  classId   String
  class     Class    @relation(fields: [classId], references: [id])
}

model Notification {
  id      String @id @default(uuid())
  title   String
  message String
  userId  String
}
